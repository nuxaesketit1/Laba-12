	setlocale(0, "");

	int N;

	cout << "Введите число для вычисления двойного факториала : " << endl;
	cin >> N;

	cout << "Факториал равен : " << Fact2(N) << endl;

	cout << endl;

	system("pause");

	return 0;

}
